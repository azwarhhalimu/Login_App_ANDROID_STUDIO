<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#A29EF2"
    android:background="@drawable/bg_android"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">
    <LinearLayout

        android:layout_marginBottom="-50px"
        android:padding="10dp"
        android:background="#A29EF2"
        android:layout_gravity="center|center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <ImageView
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:src="@drawable/image_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout

        android:orientation="vertical"
        android:elevation="9dp"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView


            android:textSize="30dp"
            android:textStyle="bold"
            android:text="Login"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout

            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="20dp"
            android:background="@drawable/bg_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="9dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_bg"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                    <ImageView
                        android:src="@drawable/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <EditText
                    android:layout_weight="1"
                    android:hint="Username"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#2FDFDFDF"
                android:layout_width="match_parent"
                android:layout_height="4dp"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="9dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_bg2"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                    <ImageView
                        android:src="@drawable/password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <EditText
                    android:layout_weight="1"
                    android:hint="Password"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:text="Forget Password?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:backgroundTint="@color/black"
                android:background="@drawable/bg_button"
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Don't have an account"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Sign Up"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout


                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="@drawable/bg_sosmed"
                    android:layout_width="60dp"
                    android:layout_height="60dp">
                    <ImageView
                        android:src="@drawable/facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout


                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="@drawable/bg_sosmed"
                    android:layout_width="60dp"
                    android:layout_height="60dp">
                    <ImageView
                        android:src="@drawable/twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout


                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/bg_sosmed"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView
                    android:src="@drawable/tumblr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>